<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentViewSettings"
    android:orientation="vertical"
    android:background = "#ffffff"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backArrowIcon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:padding="14dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/settingsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart ="20dp"
                android:layout_marginEnd ="20dp"
                android:layout_marginTop ="40dp"
                android:orientation="vertical"
                android:background="@drawable/round_back_white10_20"
                android:padding="20dp">

                <!--light dark mode-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/changeThemeIcon"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_back_background"
                        android:padding="5dp"
                        android:src="@drawable/theme" />

                    <TextView
                        android:id="@+id/changeTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/changeThemeIcon"
                        android:text="Change theme"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/themeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp"
                        android:theme="@style/nightModeSwitch" />

                </RelativeLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart ="20dp"
            android:layout_marginEnd ="20dp"
            android:layout_marginTop ="20dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10_20"
            android:padding="20dp">


            <!--Contact us-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/contactUsIcon"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/round_back_background"
                    android:padding="9dp"
                    android:src="@drawable/contact" />

                <TextView
                    android:id="@+id/contactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/contactUsIcon"
                    android:text="Contact Us"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <!--help-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/helpIcon"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/round_back_background"
                    android:padding="6dp"
                    android:src="@drawable/help" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/helpIcon"
                    android:text="Help"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <!--Report a problem-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/reportProblemIcon"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/round_back_background"
                    android:padding="7dp"
                    android:src="@drawable/report" />

                <TextView
                    android:id="@+id/reportProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/reportProblemIcon"
                    android:text="Report a Problem"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart ="20dp"
            android:layout_marginEnd ="20dp"
            android:layout_marginTop ="20dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10_20"
            android:padding="20dp">

            <!--About Ebook-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/aboutEbookIcon"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/round_back_background"
                    android:padding="7dp"
                    android:src="@drawable/about" />

                <TextView
                    android:id="@+id/aboutEbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/aboutEbookIcon"
                    android:text="About Ebook"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowIcon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>